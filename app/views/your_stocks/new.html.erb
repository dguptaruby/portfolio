<h1 class="text-center"> Add Your Stock </h1> 

<div class="container mt-3">
  <%= form_for @your_stocks do |f| %>

    <div class="mb-3">
      <%= f.label 'Stock Symbol', class: "form-label" %>
      <%= f.text_field :stock_symbol, class: "form-control" %>
      <br /> <br />
    </div>

    <div class="mb-3">
      <%= f.label 'Buy Price', class: "form-label" %>
      <%= f.text_field :buy_price, class: "form-control" %>
      <br /> <br />
    </div>

    <div class="mb-3">
      <%= f.label 'Quantity', class: "form-label" %>
      <%= f.text_field :quatity, class: "form-control" %>
      <br /> <br />
    </div>

    <small>Enter range to sell or buy </small>
    <div class="mb-3">
      <%= f.label 'Sell Side Price', class: "form-label" %>
      <%= f.text_field :up_price, class: "form-control" %>
      <br /> <br />
    </div>

    <div class="mb-3">
      <%= f.label 'Buy Side Price', class: "form-label" %>
      <%= f.text_field :down_price, class: "form-control" %>
      <br /> <br />
    </div>

    <%= submit_tag "Add Stock" %>

  <% end %>
</div>